@model EFCore.Model.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                
                <input asp-for="StudentId"  type="hidden" class="form-control" />
                
            </div>
            <div class="form-group">
                <label class="control-label">Student Name</label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"> Course Name</label>
                @Html.DropDownListFor(m => m.CourseId, new SelectList(ViewBag.Course, "CourseId", "CourseName"), "Select Course", new { @class = "form-control" })

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
